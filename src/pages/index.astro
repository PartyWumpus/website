---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Webrings from "../components/Webring.astro";
---

<Layout title="hello this is my web site :)">
  <main>
    <div>
      <h1>Welcome to <span class="text-gradient">partywump.us</span></h1>
    </div>
    <p class="intro">
      I'm <strong>Party Wumpus</strong>, a UK-based developer.<br />
      I primarily use typescript, rust and python.
    </p>
    <ul role="list" class="link-card-grid">
      <Card
        href="/projects"
        title="Projects"
        body="A list of the projects I've worked on."
      />
      <Card
        href="/aboutme"
        title="Accounts"
        body="Places you can reach me if you want to get in touch."
      />
      <Card
        href="/blog"
        title="Blog"
        body="Various blog posts about things I've worked on."
      />
    </ul>
  </main>
  <Webrings />
</Layout>

<style>
  .astro-a {
    position: absolute;
    top: -32px;
    left: 50%;
    transform: translatex(-50%);
    width: 220px;
    height: auto;
    z-index: -1;
  }
  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
  .intro {
    text-align: center;
    margin-bottom: 2rem;
    border: 1px solid rgba(var(--accent-light), 25%);
    background: linear-gradient(
      rgba(var(--accent-dark), 66%),
      rgba(var(--accent-dark), 33%)
    );
    padding: 1.5rem;
    border-radius: 8px;
  }
  .intro code {
    font-size: 0.8em;
    font-weight: bold;
    background: rgba(var(--accent-light), 12%);
    color: rgb(var(--accent-light));
    border-radius: 4px;
    padding: 0.3em 0.4em;
  }
  .intro strong {
    color: rgb(var(--accent-light));
  }
  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 2rem;
    padding: 0;
  }
</style>
